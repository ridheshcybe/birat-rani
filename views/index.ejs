<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./pages/components/head.ejs") %>
  <link rel="stylesheet" href="/public/css/home.css">
</head>

<body>
  <!-- Spinner Start -->
  <%- include("./pages/components/loader.ejs") %>
  <!-- Spinner End -->


  <!-- Topbar Start -->
  <%- include("./pages/components/topbar.ejs") %>
  <!-- Topbar End -->


  <!-- Navbar Start -->
  <%- include('./pages/components/navbar.ejs') %>
  <!-- Navbar End -->


  <!-- Header Start -->
  <div class="container-fluid header bg-primary p-0 mb-5">
    <div class="row g-0 align-items-center flex-column-reverse flex-lg-row">
      <div class="col-lg-6 p-5 wow fadeIn" data-wow-delay="0.1s">
        <h1 class="display-4 text-white mb-5">Good Health Is The Root Of All Happiness</h1>
        <div class="row g-4">
          <div class="col-sm-4">
            <div class="border-start border-light ps-4">
              <h2 class="text-white mb-1">
                <span data-toggle="counter-up" class="change">12</span>+
              </h2>
              <p class="text-light mb-0">Expert Doctors</p>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="border-start border-light ps-4">
              <h2 class="text-white mb-1"><span data-toggle="counter-up" class="change">12345</span>+</h2>
              <p class="text-light mb-0">Total Patients</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
        <div class="owl-carousel header-carousel">
          <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="/public/img/carousel-1.jpg" alt="">
            <div class="owl-carousel-text">
              <h1 class="display-1 text-white mb-0">Cataract Treatment</h1>
            </div>
          </div>
          <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="/public/img/carousel-2.jpg" alt="">
            <div class="owl-carousel-text">
              <h1 class="display-1 text-white mb-0">Glaucoma Treatment</h1>
            </div>
          </div>
          <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="/public/img/carousel-3.jpg" alt="">
            <div class="owl-carousel-text">
              <h1 class="display-1 text-white mb-0">Lasik surgery</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->


  <!-- About Start -->
  <%- include("./pages/about.ejs") %>
  <!-- About End -->


  <!-- Team Start -->
  <%- include("./pages/team.ejs")%>
  <!-- Team End -->


  <!-- Appointment Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="row g-5">
        <div class=" wow fadeInUp" data-wow-delay="0.1s" style="display: grid;align-items: center; text-align: center;grid-row: auto;">
          <p class="d-inline-block border rounded-pill py-1 px-4">Appointment</p>
          <h1 class="mb-4">Make An Appointment To Visit Our Highly Qualified Doctors</h1>
          <div class="bg-light rounded d-flex align-items-center p-5 mb-4 pad-left">
            <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
              <i class="fa fa-phone-alt text-primary"></i>
            </div>
            <div class="ms-4 ">
              <p class="mb-2">Call Us Now</p>
              <h5 class="mb-0">+977 9820743178</h5>
            </div>
          </div>
          <div class="bg-light rounded d-flex align-items-center p-5 pad-left">
            <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
              <i class="fa fa-envelope-open text-primary"></i>
            </div>
            <div class="ms-4">
              <p class="mb-2">Mail Us Now</p>
              <h5 class="mb-0">info@example.com</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Appointment End -->

  <%- include("./pages/testimonial.ejs") %>
  <!-- Testimonial Start -->

  <!-- Testimonial End -->


  <!-- Footer Start -->
  <%- include("./pages/components/footer.ejs") %>
  <!-- Footer End -->

